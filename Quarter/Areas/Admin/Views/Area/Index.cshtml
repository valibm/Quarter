@model List<Area>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between mt-5 mb-3">
                <a asp-area="admin" asp-controller="dashboard" asp-action="index" class="btn bg-gradient-secondary">Go Back</a>
                <a asp-area="admin" asp-controller="area" asp-action="create" class="btn bg-gradient-success">Create</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">City</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Country</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var area in Model)
                            {
                                <tr>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@area.Name</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@area.Location.City</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@area.Location.Country</p>
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="area" asp-action="details" asp-route-id="@area.Id" class="btn bg-gradient-info">Details</a>
                                        <a asp-area="admin" asp-controller="area" asp-action="update" asp-route-id="@area.Id" class="btn bg-gradient-warning">Update</a>
                                        <a asp-area="admin" asp-controller="area" asp-action="delete" asp-route-id="@area.Id" class="btn bg-gradient-danger">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>