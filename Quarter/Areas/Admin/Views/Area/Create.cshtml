@model Area

@{
    List<Location> locations = (List<Location>)ViewData["locations"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-2">Create - Area</h4>
                    <form asp-controller="area" asp-action="create" method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="LocationId">Locations</label>
                            <select asp-for="LocationId" class="form-control form-control-lg">
                                @foreach (var location in locations)
                                {
                                    <option value="@location.Id">@location.City</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-outline-success mr-2">Create</button>
                        <button asp-controller="area" asp-action="index" class="btn btn-outline-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>