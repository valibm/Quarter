@model Blog

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between mt-5 mb-3">
                <a asp-area="admin" asp-controller="blog" asp-action="index" class="btn bg-gradient-secondary">Go Back</a>
                <a asp-area="admin" asp-controller="blog" asp-action="create" class="btn bg-gradient-success">Create</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Image</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Title</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Settings</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex px-2">
                                        <div>
                                            @foreach (var blogImage in Model.BlogImages)
                                            {
                                                if (blogImage.Image.ForCard == true)
                                                {
                                                    <img src="~/assets/uploads/images/@blogImage.Image.Name" class="avatar avatar-sm rounded-circle me-2">
                                                }
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">@Model.Title</p>
                                </td>
                                <td>
                                    <a asp-area="admin" asp-controller="blog" asp-action="update" asp-route-id="@Model.Id" class="btn bg-gradient-warning">Update</a>
                                    <a asp-area="admin" asp-controller="blog" asp-action="delete" asp-route-id="@Model.Id" class="btn bg-gradient-danger">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>