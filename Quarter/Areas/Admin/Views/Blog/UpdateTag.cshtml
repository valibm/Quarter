@model List<TagVM>

<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-2">Add tags to your blog.</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post" class="forms-sample">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model[i].TagId" />
                                <input type="hidden" asp-for="@Model[i].TagName" />
                                <input asp-for="@Model[i].Selected"/>
                                <label asp-for="@Model[i].Selected">
                                    @Model[i].TagName
                                </label>
                            </div>
                        }
                        <button type="submit" class="btn btn-outline-success mr-2">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>