@model List<ManageVM>

@{
    Product product = (Product)ViewData["product"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-2">Manage User Roles</h4>
                    <form method="post" class="forms-sample">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].Selected"/>
                                <label asp-for="@Model[i].Selected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        }
                        <button type="submit" class="btn btn-outline-success mr-2">Update</button>
                        <button asp-controller="usermanager" asp-action="index" class="btn btn-outline-info">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>