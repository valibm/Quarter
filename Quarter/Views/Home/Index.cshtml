                                </ul>
                            </div>
                        </div>
                        <div class="search-by-place-info">
                            <h6><a asp-controller="shop" asp-action="showbyarea" asp-route-id="@area.Id">@area.Location.City</a></h6>
                            <h4><a asp-controller="shop" asp-action="showbyarea" asp-route-id="@area.Id">@area.Name</a></h4>
