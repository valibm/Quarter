    @model RegisterVM
    <!-- BREADCRUMB AREA START -->
    <div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image "  data-bs-bg="./assets/img/bg/14.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__breadcrumb-inner">
                        <h1 class="page-title">Account</h1>
                        <div class="ltn__breadcrumb-list">
                            <ul>
                                <li><a asp-controller="home" asp-action="index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                                <li>Register</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BREADCRUMB AREA END -->

    <!-- LOGIN AREA START (Register) -->
    <div class="ltn__login-area pb-110">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title-area text-center">
                        <h1 class="section-title">Register <br>Your Account</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="account-login-inner">
                        <form asp-controller="account" asp-action="register" method="post" class="ltn__form-box contact-form-box">
                            <input asp-for="Firstname" placeholder="First Name">
                            <span class="text-danger" asp-validation-for="Firstname"></span>
                            <input asp-for="Lastname" placeholder="Last Name">
                            <span class="text-danger" asp-validation-for="Lastname"></span>
                            <input asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                            <input asp-for="Username" placeholder="User Name">
                            <span class="text-danger" asp-validation-for="Username"></span>
                            <input asp-for="Password" placeholder="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                            <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            <label class="checkbox-inline">
                                <input type="checkbox" value="">
                                I consent to Herboil processing my personal data in order to send personalized marketing material in accordance with the consent form and the privacy policy.
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" value="">
                                By clicking "create account", I consent to the privacy policy.
                            </label>
                            <div class="btn-wrapper">
                                <button class="theme-btn-1 btn reverse-color btn-block" type="submit">CREATE ACCOUNT</button>
                            </div>
                        </form>
                        <span class="text-danger" asp-validation-summary="All"></span>
                        <div class="by-agree text-center">
                            <p>By creating an account, you agree to our:</p>
                            <p><a href="#">TERMS OF CONDITIONS  &nbsp; &nbsp; | &nbsp; &nbsp;  PRIVACY POLICY</a></p>
                            <div class="go-to-btn mt-50">
                                <a asp-controller="account" asp-action="login">ALREADY HAVE AN ACCOUNT ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- LOGIN AREA END -->
