@model BlogVM

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="./assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">News Feeds</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span>Home</a></li>
                            <li>Blog</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- BLOG AREA START -->
<div class="ltn__blog-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="ltn__blog-list-wrap">
                    @foreach (var blog in Model.Blogs)
                    {
                        <!-- Blog Item -->
                        <div class="ltn__blog-item ltn__blog-item-5">
                            <div class="ltn__blog-img">
                                @foreach (var blogImage in blog.BlogImages)
                                {
                                    @if (blogImage.Image.ForCard == true)
                                    {
                                        <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id">
                                            <img src="~/Assets/Uploads/Images/@blogImage.Image.Name" alt="Image">
                                        </a>
                                    }
                                }
                            </div>
                            <div class="ltn__blog-brief">
                                <h3 class="ltn__blog-title">
                                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id">
                                        @blog.Title
                                    </a>
                                </h3>
                                <div class="ltn__blog-meta">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="far fa-eye"></i>232 Views</a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="far fa-comments"></i>@blog.Comments.Count Comments</a>
                                        </li>
                                        <li class="ltn__blog-date">
                                            <i class="far fa-calendar-alt"></i>@blog.CreatedDate.ToString("d,  MMMM yyyy", CultureInfo.InvariantCulture)
                                        </li>
                                    </ul>
                                </div>
                                <p>@blog.Description</p>
                                <div class="ltn__blog-meta-btn">
                                    <div class="ltn__blog-meta">
                                        <ul>
                                            <li class="ltn__blog-author">
                                                <a asp-controller="team" asp-action="teamdetail" asp-route-id="@blog.AppUser.Id">
                                                    <img class="blog-profile" src="~/Assets/Uploads/Images/@blog.AppUser.Image.Name" alt="#">By: @blog.AppUser.FirstName
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="ltn__blog-btn">
                                        <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id">
                                            <i class="fas fa-arrow-right"></i>Read more
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ltn__pagination-area text-center">
                                <div class="ltn__pagination">
                                    <ul>
                                        <li><a href="#"><i class="fas fa-angle-double-left"></i></a></li>
                                        <li><a href="#">1</a></li>
                                        <li class="active"><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
