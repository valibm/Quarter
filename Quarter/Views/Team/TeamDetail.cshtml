@model AppUser

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="./assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Agent Details</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li><a asp-controller="Home" asp-action="Index"> Team</a></li>
                            <li>Agent Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- TEAM DETAILS AREA START -->
<div class="ltn__team-details-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="ltn__team-details-member-info text-center mb-40">
                    <div class="team-details-img">
                        <img src="~/Assets/Uploads/Images/@Model.Image.Name" alt="Team Member Image">
                    </div>
                    <h2>@Model.FirstName @Model.LastName</h2>
                    <h6 class="text-uppercase ltn__secondary-color">@Model.Position.Name</h6>
                    <div class="ltn__social-media-3">
                        <ul>
                            <li><a href="@Model.FacebookLink" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="@Model.TwitterLink" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="@Model.LinkedInLink" title="Linkedin"><i class="fab fa-linkedin"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="ltn__team-details-member-info-details">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ltn__team-details-member-about">
                                <ul>
                                    <li><strong>Positions:</strong> @Model.Position</li>
                                    <li><strong>Experience:</strong> @Model.Experience+ Years</li>
                                    <li><strong>Location:</strong> @Model.Location</li>
                                    <li><strong>Practice Area:</strong> @Model.PracticeArea</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ltn__team-details-member-about">
                                <ul>
                                    <li><strong>Email:</strong> @Model.Email</li>
                                    <li><strong>Fax:</strong> @Model.PhoneNumber</li>
                                    <li><strong>Phone:</strong> @Model.PhoneNumber</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <p>@Model.Information</p>

                    <div class="ltn__form-box contact-form-box box-shadow white-bg mt-50">
                        <h4 class="title-2">Contact for any Inquiry</h4>
                        <form id="contact-form" action="mail.php" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-item input-item-name ltn__custom-icon">
                                        <input type="text" name="name" placeholder="Enter your name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-email ltn__custom-icon">
                                        <input type="email" name="email" placeholder="Enter email address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item">
                                        <select class="nice-select">
                                            <option>Select Service Type</option>
                                            <option>Property Management </option>
                                            <option>Mortgage Service </option>
                                            <option>Consulting Service</option>
                                            <option>Home Buying</option>
                                            <option>Home Selling</option>
                                            <option>Escrow Services</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-phone ltn__custom-icon">
                                        <input type="text" name="phone" placeholder="Enter phone number">
                                    </div>
                                </div>
                            </div>
                            <div class="input-item input-item-textarea ltn__custom-icon">
                                <textarea name="message" placeholder="Enter message"></textarea>
                            </div>
                            <p><label class="input-info-save mb-0"><input type="checkbox" name="agree"> Save my name, email, and website in this browser for the next time I comment.</label></p>
                            <div class="btn-wrapper mt-0">
                                <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="submit">get an free service</button>
                            </div>
                            <p class="form-messege mb-0 mt-20"></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- TEAM DETAILS AREA END -->